generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  passwordHash  String
}

model MindmapNode {
  id            Int @id @default(autoincrement())
  title         String
  contentText   String
  parentNodeId  Int?
}
